//　指定位置の添え字を変更
task ChangeStageTrance(array_num,frag){
	let array = GetAreaCommonData("StageTrance", "trance", [false,false,false,false] );
	
	array[ array_num ] = frag;
	
	SetAreaCommonData("StageTrance", "trance", array );
}

