				ObjPrim_SetVertexUVT(obj[lp], i, 0 + _rect - count*spin_ac[lp], 0 + count );
				ObjPrim_SetVertexUVT(obj[lp], j, 0 + _rect - count*spin_ac[lp], 2048 + count );
