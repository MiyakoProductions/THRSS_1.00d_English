	//　自機の設定
	SetAreaCommonData("System", "player_type", player );
	
	//　プレイカウンタ加算
	AddPlayCount( charactor );
	
	//　代入されたシーンスクリプト起動
	let idScript = LoadScript(pathScript);
	StartScript(idScript);
}

